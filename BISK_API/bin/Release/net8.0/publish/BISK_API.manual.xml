		<member name="M:Bisk_APIS.Controllers.PostingController.PostItem(BISK_API.Model.ItemMaster,System.Threading.CancellationToken)">
			<summary>
				Create Item (Service Layer: <c>Items</c>).
			</summary>
			<remarks>
				<div style="display:grid;gap:14px;line-height:1.55;">

					<!-- Header -->
					<div style="border:1px solid #e5e7eb;border-radius:12px;padding:14px;background:#ffffff;">
						<div style="display:flex;align-items:center;gap:8px;flex-wrap:wrap;">
							<span style="font-weight:700;font-size:15px;">Overview</span>
							<span style="font-size:12px;padding:2px 8px;border:1px solid #22c55e;color:#16a34a;border-radius:999px;background:#f0fdf4;">
								POST /posting/items
							</span>
						</div>
						<div style="color:#475569;margin-top:6px;">Creates a new Inventory Item in SAP B1 via Service Layer.</div>
					</div>

					<!-- Required fields -->
					<div style="border:1px solid #e5e7eb;border-radius:12px;padding:14px;background:#ffffff;">
						<div style="display:flex;align-items:center;gap:8px;margin-bottom:10px;">
							<span style="font-weight:700;font-size:14px;">Required fields</span>
							<span style="font-size:11px;padding:2px 8px;border:1px solid #94a3b8;color:#334155;border-radius:999px;background:#f8fafc;">
								ItemMaster
							</span>
						</div>

						<ul style="margin:0 0 0 18px;line-height:1.7;">
							<li style="margin:6px 0;">
								<span style="display:inline-flex;align-items:center;gap:10px;">
									<code>itemCode</code>
									<span style="font-size:12px;padding:2px 8px;border:1px solid #cbd5e1;border-radius:999px;background:#f8fafc;color:#475569;">string</span>
								</span>
							</li>
							<li style="margin:6px 0;">
								<span style="display:inline-flex;align-items:center;gap:10px;">
									<code>itemName</code>
									<span style="font-size:12px;padding:2px 8px;border:1px solid #cbd5e1;border-radius:999px;background:#f8fafc;color:#475569;">string</span>
								</span>
							</li>
							<li style="margin:6px 0;">
								<span style="display:inline-flex;align-items:center;gap:10px;">
									<code>itemsGroupCode</code>
									<span style="font-size:12px;padding:2px 8px;border:1px solid #cbd5e1;border-radius:999px;background:#f8fafc;color:#475569;">number</span>
								</span>
							</li>
						
						</ul>
					</div>

					<!-- Request -->
					<div style="border:1px solid #e5e7eb;border-radius:12px;padding:14px;background:#ffffff;">
						<div style="display:flex;align-items:center;gap:8px;margin-bottom:8px;">
							<span style="font-weight:700;font-size:14px;">Request</span>
							<span style="font-size:12px;padding:2px 8px;border:1px solid #0ea5e9;color:#0284c7;border-radius:999px;background:#ecfeff;">application/json</span>
						</div>
						<pre style="margin:0;padding:12px;background:#0b102117;border:1px solid #e5e7eb;border-radius:10px;overflow:auto;">
							<code language="json">
								{
								"itemCode": "INV-100731",
								"itemName": "Notebook A5",
								"itemsGroupCode": 105,
								"barCode": "1234567890123",
								"inventoryItem": "Y",
								"salesItem": "Y",
								"purchaseItem": "Y",
								"uomGroupEntry": 1
								}
							</code>
						</pre>
					</div>

					<!-- Responses -->
					<div style="display:grid;gap:12px;">
						<!-- Success -->
						<div style="border:1px solid #e5e7eb;border-radius:12px;padding:14px;background:#ffffff;">
							<div style="display:flex;align-items:center;gap:8px;margin-bottom:8px;">
								<span style="font-weight:700;font-size:14px;">Success</span>
								<span style="font-size:12px;padding:2px 8px;border:1px solid #22c55e;color:#16a34a;border-radius:999px;background:#f0fdf4;">201 Created</span>
							</div>
							<pre style="margin:0;padding:12px;background:#0b102117;border:1px solid #e5e7eb;border-radius:10px;overflow:auto;">
								<code language="json">
									{
									"success": true,
									"data": { "itemCode": "INV-100731", "itemName": "Notebook A5" },
									"error": null
									}
								</code>
							</pre>
						</div>

						<!-- Error -->
						<div style="border:1px solid #e5e7eb;border-radius:12px;padding:14px;background:#ffffff;">
							<div style="display:flex;align-items:center;gap:8px;margin-bottom:8px;">
								<span style="font-weight:700;font-size:14px;">Error</span>
								<span style="font-size:12px;padding:2px 8px;border:1px solid #ef4444;color:#ef4444;border-radius:999px;background:#fef2f2;">400 Bad Request</span>
							</div>
							<pre style="margin:0;padding:12px;background:#0b102117;border:1px solid #e5e7eb;border-radius:10px;overflow:auto;">
								<code language="json">
									{
									"success": false,
									"data": null,
									"error": "Invalid item group"
									}
								</code>
							</pre>
						</div>
					</div>

				</div>
			</remarks>
			<response code="201">Created.</response>
			<response code="400">Invalid payload.</response>
			<response code="500">Service Layer error.</response>
		</member>


